{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
        "classmap": [
            "laravel/database"
        ],
        "psr-4": {
            "App\\": "laravel/app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "laravel/tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "cd laravel; php artisan clear-compiled",
            "cd laravel; php artisan optimize"
        ],
        "pre-update-cmd": [
            "cd laravel; php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "cd laravel; php artisan optimize"
        ],
        "post-root-package-install": [
            "cd laravel; php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "cd laravel; php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
